    <ItemGroup>
        <Folder Include="Models\" />
    </ItemGroup>
    <!--Including generated files from Mapster in Project-->
    <ItemGroup>
        <Generated Include="**\*.g.cs" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Update="Roslynator.Analyzers" Version="4.13.1" />
    </ItemGroup>
